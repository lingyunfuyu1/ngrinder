<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:task="http://www.springframework.org/schema/task"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	http://www.springframework.org/schema/task
	http://www.springframework.org/schema/task/spring-task-4.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<task:annotation-driven executor="myExecutor" scheduler="myScheduler"/>
	<task:executor id="myExecutor" pool-size="100"/>
	<task:scheduler id="myScheduler" pool-size="100"/>

	<context:property-placeholder location="classpath:application.properties"/>
	<context:component-scan base-package="org.ngrinder.perftest.service"/>
	<task:scheduled-tasks>
		<task:scheduled ref="perfTestScheduledTaskService" method="generateScheduledPerfTests"
						cron="${cron.expression}"/>
	</task:scheduled-tasks>
</beans>

